<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/bg_gradient_blue">

    <TextView
        style="@style/maintFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dailyListTitle"
        tools:text="Today"
        android:textStyle="normal|bold" />

    <TextView
        style="@style/maintFont"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dailyListDescription"
        tools:text="Partly cloudy in the morning" />

    <TextView
        style="@style/maintFont"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dailyListProbability"
        tools:text="Rain:Probability: 24%" />
</LinearLayout>